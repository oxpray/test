<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>A_Zaupa PhotoGallery</title>
<meta name="keywords" content="photo gallery" />
<meta name="description" content="a photo gallery for my friends" />
<link href="/stylesheets/style.css" rel="stylesheet" type="text/css" media="screen" />
<%= javascript_include_tag :defaults %>
<%= active_scaffold_includes %>
</head>
<body>
<div id="wrapper">

	<div id="header">
		<div id="menu">
			<ul>
				<li class="current_page_item"><a href="#">Home</a></li>
				<li><a href="#">Browse</a></li>
				<li><a href="#">NewAddictions</a></li>
				<li><%= link_to "PersonalPage" , :controller => :album  %> </li>
				<li><a href="#">Contact</a></li>
                <%if !current_user %>
                <li>
                <%= link_to "Register" , new_user_path %> | <%= link_to "Login" , login_path %></li>
                <%  else %>

                <li> <%= link_to("Logout",logout_path)+"|"+ link_to("Edit Profile",edit_user_path( :current )) %>   </li>
             <%if current_user.is_admin? %>
              <li><a href="#">Admin Pannel</a></li>
             <%end%>
            <%end%>

            </ul>
		</div>
		<!-- end #menu -->
		<div id="search">
			<form method="get" action="">
				<fieldset>
				<input type="text" name="s" id="search-text" size="15" />
				<input type="submit" id="search-submit" value="Search" />
				</fieldset>
			</form>
		</div>
		<!-- end #search -->
	</div>
	<!-- end #header -->
	<div id="logo">
		<h1><a href="/">PhotoGallery</a></h1>
	</div>
	<hr />
	<!-- end #logo -->
<!-- end #header-wrapper -->
<%= flash %>
<%= yield :layout %>

<div id="footer">
	<p>Copyright (c) 2009 azaupa.com. All rights reserved. Design by <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
</div>
<!-- end #footer -->
</div>
</body>
